
@{
    ViewData["Title"] = "Index";
}
@section Scripts{
   
    <script src="~/lib/app/Controllers/Products/Index.js"></script>
    <script>
        var product = new productController();
        product.initialize();
    </script>
}
    <div class="page-title">
        <div class="title_left">
            <h3>Products <small>List Products</small></h3>
        </div>
        <div class="title_right">
            <div style="float:right">
                <select id="ddlProductCategory" class="form-group" style="border-radius:25px;margin-top:15px ;width:100px;height:25px" >
                    <option value="">-----select-----</option>
                </select>
            </div>
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" id="txtKeyWord" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="btnSearch" type="button">Go!</button>
                    </span>
                </div> 
            </div>
        </div>
    </div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Created Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <div class="row">
                    <div>
                        <div class="dataTables_info" id="dataTableCheckInfo" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi trang/trang
                            </span>
                            Tổng số bản ghi:<strong id="lblTotalRecord"></strong>
                        </div>
                        <div>
                            <div>
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTableCheckbox_paginate">
                                    <ul id="paginationaUL"></ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
<script id="table_tamplate" type="x-tmpl-mustache">
    <tr>
        <th scope="row">
            <button class="btn btn-default btn-sm"><i class="fa fa-pencil"></i></button>
            <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
        </th>
        <td>{{Name}}</td>
        <td>{{CategoryName}}</td>
        <td>{{{Price}}}</td>
        <th>{{{Images}}}</th>
        <td>{{{CreatedDate}}}</td>
        <td>{{{Status}}}</td>
    </tr>
</script>